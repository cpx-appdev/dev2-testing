<Window x:Class="SpellChecker.UI.RechtschreibPruefungDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rechtschreibprüfung" Height="350" Width="525">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="Text" Text="Der Apfel fällt nicht weit vom Birnbaum" AcceptsReturn="True" AcceptsTab="True"/>
        <Button Grid.Row="1" Click="RechtschreibprüfungStarten_Click">Rechtschreibung prüfen</Button>
        <ListBox Grid.Row="2" x:Name="FehlerhafteWörter"/>
    </Grid>
</Window>